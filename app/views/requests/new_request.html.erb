<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Create Request
    </h2>

    <form action="/insert_request"  method="post" >
      <input type="hidden" id="requester_id_box" name="requester_id_from_query" class="form-control" value="<%= @current_user.id %>">
  
      <div class="form-group">
        <label for="metro_area_box">
          Metro area
        </label>

        <select name="metro_area_from_query">
          <option disabled selected value>-- select an option --</option>
          <option value="Chicago">Chicago</option>
          <option value="NewYork">New York</option>
          <option value="SanFrancisco">San Francisco</option>
          <option value="Boston">Boston</option>
        </select>

      <div class="form-group">
        <label for="start_date_box">
          Start date
        </label>

        <input type="date" id="start_date_box" name="start_date_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="end_date_box">
          End date
        </label>

        <input type="date" id="end_date_box" name="end_date_from_query" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update request
      </button>
    </form>
  </div>
</div>